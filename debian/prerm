#!/bin/bash
# prerm script for #PACKAGE#
#

set -e

# delete the links from the sidu-base:
function RmLink(){
        if [ -L $1 ] ; then
                rm -f $1
        fi
}

case "$1" in
    remove|upgrade|deconfigure)
        if [ -L /usr/share/siguibui/public ] ; then
            rm /usr/share/siguibui/public
        fi

        pushd /tmp 2>&1 >/dev/null
        test -d /usr/local/lib/site_perl && cd /usr/local/lib/site_perl
        RmLink sidu_test.pm 
        RmLink sidu_basic.pm 
        RmLink sidu_recorder.pm 
        popd 2>&1 >/dev/null

        sidu-base-control stop
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
